<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/general_bg"
    android:orientation="vertical" >
            
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Game Duration [mins]"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/SettingsTextHeadings" />

            <TextView
                android:id="@+id/game_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="36dp"
                android:text="0:30"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/SettingsTextHeadings" />
            
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
            
        <Button
        android:id="@+id/min3Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/red_square_btn"
        android:onClick="chooseGameTime"
        android:text="2" />

    <Button
        android:id="@+id/min5Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/red_square_btn"
        android:onClick="chooseGameTime"
        android:text="5" />
    
            <Button
        android:id="@+id/min10Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/red_square_btn"
        android:onClick="chooseGameTime"
        android:text="7" />

    <Button
        android:id="@+id/min15Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/red_square_btn"
        android:onClick="chooseGameTime"
        android:text="10" />
            <Button
        android:id="@+id/min20Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/red_square_btn"
        android:onClick="chooseGameTime"
        android:text="15" />

    <Button
        android:id="@+id/min25Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/red_square_btn"
        android:onClick="chooseGameTime"
        android:text="20" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/slider_bar_red" />
    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Turn Duration [secs]"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/SettingsTextHeadings" />

    <TextView
        android:id="@+id/turn_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="130dp"
        android:text="0:10"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/SettingsTextHeadings" />
    
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/sec10Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_square_btn"
        android:layout_marginLeft="10dp"
        android:onClick="chooseGameTurnTime"
        android:text="10" />

    <Button
        android:id="@+id/sec20Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_square_btn"
        android:onClick="chooseGameTurnTime"
        android:layout_marginLeft="10dp"
        android:text="20" />

    <Button
        android:id="@+id/sec30Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_square_btn"
        android:onClick="chooseGameTurnTime"
        android:layout_marginLeft="10dp"
        android:text="30" />

    <Button
        android:id="@+id/sec20Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_square_btn"
        android:onClick="chooseGameTurnTime"
        android:layout_marginLeft="10dp"
        android:text="40" />

    <Button
        android:id="@+id/sec25Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_square_btn"
        android:onClick="chooseGameTurnTime"
        android:layout_marginLeft="10dp"
        android:text="50" />

    <Button
        android:id="@+id/sec30Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_square_btn"
        android:onClick="chooseGameTurnTime"
        android:layout_marginLeft="10dp"
        android:text="60" />

</LinearLayout>
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/slider_bar_blue" />
    
        <Button
            android:id="@+id/doneBtn"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:background="@drawable/back_btn"
            android:onClick="backToMain"
            android:text="" />

</LinearLayout>