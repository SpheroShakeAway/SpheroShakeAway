<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/shakescount_text"
            style="@style/ListItemLabel"
            android:layout_alignParentTop="true"
            android:text="Shakes Count"
            />

    <TextView
            android:id="@+id/shakes_label"
            style="@style/ListItemLabel.Child"
            android:layout_below="@+id/shakescount_text"
            android:text="Count:"
            />

    <TextView
            android:id="@+id/shakes_value"
            style="@style/Label.Value"
            android:layout_below="@+id/shakescount_text"
            android:layout_toRightOf="@+id/shakes_label"
            android:text="0"
            />
    
    <TextView
            android:id="@+id/shakes_label2"
            style="@style/ListItemLabel.Child"
            android:layout_below="@+id/shakes_label"
            android:text="Count Team 2:"
            />

    <TextView
            android:id="@+id/shakes_value2"
            style="@style/Label.Value"
            android:layout_below="@+id/shakes_value"
            android:layout_toRightOf="@+id/shakes_label2"
            android:text="0"
            />

</RelativeLayout>