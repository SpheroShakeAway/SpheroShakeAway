<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.orbotix.poolthrowaway"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk android:minSdkVersion="8"/>

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application android:icon="@drawable/spheroh2oicon" android:label="@string/app_name" >
        <activity android:name="ShakeawayActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboard|keyboardHidden"
                android:screenOrientation="landscape"
                android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity 
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:screenOrientation="landscape"
            android:name="orbotix.robot.app.StartupActivity"/>
     
        <activity
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:screenOrientation="landscape"
            android:name="InstructionActivity"
            android:label="Instructions"/>
        
        <activity
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:screenOrientation="landscape"
            android:name="GameActivity"
            android:label="Game"/>
        
        <activity
            android:configChanges="orientation|keyboard|keyboardHidden"
            android:screenOrientation="landscape"
            android:name="SettingsActivity"
            android:label="Settings"/>
    </application>
</manifest> 